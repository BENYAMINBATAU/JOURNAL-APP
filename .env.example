# BENYAMIN BATAU JOURNAL APP - Environment Variables

# API Keys (Optional - untuk fitur AI Enhancement)
# Dapatkan API key dari: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Dapatkan API key dari: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
SECRET_KEY=benyamin-batau-journal-secret-key-2026-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
ALLOWED_EXTENSIONS=pdf,docx,doc

# Processing Configuration
DEFAULT_TEMPLATE=unm
DEFAULT_MIN_REFERENCES=15
DEFAULT_AI_PROVIDER=claude

# Server Configuration
HOST=0.0.0.0
PORT=5000
